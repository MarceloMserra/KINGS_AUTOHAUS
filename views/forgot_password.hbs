<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    body {
        background-image: url('/images/login.png'); /* Usar o mesmo background do login */
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .forgot-password-container {
        background-color: rgba(0, 0, 0, 0.8);
        border: 1px solid #05FC04;
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(5, 252, 4, 0.4);
        padding: 40px;
        max-width: 500px;
        width: 100%;
        text-align: center;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

    .forgot-password-container h2 {
        color: #05FC04;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
    }

    .form-group label {
        color: #ffffff;
        font-weight: bold;
        text-align: left;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: #0d0d0d !important;
        color: #ffffff !important;
        border: 1px solid #05FC04 !important;
        border-radius: 8px !important;
        padding: 10px 15px !important;
        transition: all 0.3s ease !important;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5) !important;
    }

    .form-control:focus {
        border-color: #04D803 !important;
        box-shadow: 0 0 0 0.2rem rgba(5, 252, 4, 0.25) !important;
        background-color: #000000 !important;
        color: #ffffff !important;
    }

    .btn-submit-form {
        background-color: #05FC04 !important;
        border-color: #05FC04 !important;
        color: #000000 !important;
        font-weight: bold !important;
        padding: 12px 30px !important;
        border-radius: 8px !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
        width: 100%;
        margin-top: 20px;
    }

    .btn-submit-form:hover {
        background-color: #04D803 !important;
        border-color: #04D803 !important;
        color: #ffffff !important;
        transform: translateY(-2px) !important;
        box-shadow: 0 5px 15px rgba(5, 252, 4, 0.4) !important;
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
    }

    .alert-danger, .alert-success {
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 15px;
        font-weight: bold;
    }
    .alert-danger {
        background-color: rgba(220, 53, 69, 0.8);
        color: #ffffff;
        border-color: #dc3545;
    }
    .alert-success {
        background-color: rgba(40, 167, 69, 0.8);
        color: #ffffff;
        border-color: #28a745;
    }

    .login-link {
        color: #05FC04;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .login-link:hover {
        color: #04D803;
        text-decoration: underline;
    }
</style>

<div class="forgot-password-container">
    <h2>Forgot Your Password?</h2>
    <hr style="border-top: 2px solid #05FC04; width: 80px; margin: 15px auto 30px auto; border-radius: 5px;">

    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">{{this.text}}</div>
        {{/each}}
    {{/if}}
    {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
    {{/if}}
    {{#if success_msg}}
        <div class="alert alert-success">An email with password reset instructions has been sent to you.</div>
    {{/if}}

    <p class="text-muted">Enter your email address below and we'll send you a link to reset your password.</p>

    <form action="/forgot-password" method="POST">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" value="{{email}}" required>
        </div>
        <button type="submit" class="btn btn-submit-form">Send Reset Link</button>
    </form>
    <p class="mt-3 text-muted">Remembered your password? <a href="/login" class="login-link">Login here</a></p>
</div>
