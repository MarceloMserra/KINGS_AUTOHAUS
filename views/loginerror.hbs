<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    body {
        background-image: url('/images/login.png'); /* Usar o mesmo background do login */
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .login-error-container {
        background-color: rgba(0, 0, 0, 0.8);
        border: 1px solid #dc3545; /* Borda vermelha para erro */
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(220, 53, 69, 0.4); /* Sombra vermelha */
        padding: 40px;
        max-width: 400px;
        width: 100%;
        text-align: center;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

    .login-error-container h2 {
        color: #dc3545; /* TÃ­tulo vermelho */
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
    }

    .btn-back-to-login {
        background-color: #05FC04 !important;
        border-color: #05FC04 !important;
        color: #000000 !important;
        font-weight: bold !important;
        padding: 12px 30px !important;
        border-radius: 8px !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
        width: 100%;
        margin-top: 20px;
    }

    .btn-back-to-login:hover {
        background-color: #04D803 !important;
        border-color: #04D803 !important;
        color: #ffffff !important;
        transform: translateY(-2px) !important;
        box-shadow: 0 5px 15px rgba(5, 252, 4, 0.4) !important;
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.8);
        color: #ffffff;
        border-color: #dc3545;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 15px;
        font-weight: bold;
    }

    .forgot-password-link {
        color: #05FC04;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .forgot-password-link:hover {
        color: #04D803;
        text-decoration: underline;
    }
</style>

<div class="login-error-container">
    <h2>Login Failed</h2>
    <hr style="border-top: 2px solid #dc3545; width: 80px; margin: 15px auto 30px auto; border-radius: 5px;">

    {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
    {{else}}
        <div class="alert alert-danger">Invalid username or password. Please try again.</div>
    {{/if}}

    <a href="/login" class="btn btn-back-to-login">Back to Login</a>
    <p class="mt-3 text-muted">
        Forgot your password? <a href="/forgot-password" class="forgot-password-link">Reset here</a>
    </p>
</div>
