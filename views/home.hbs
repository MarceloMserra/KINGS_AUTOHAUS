<!-- JavaScript for dynamic Model filter -->
<script>
    // Converts the JSON string of modelsByBrand back to a JavaScript object
    let modelsByBrand = {};
    try {
        const modelsByBrandString = '{{{modelsByBrand}}}';
        modelsByBrand = JSON.parse(modelsByBrandString || '{}');
    } catch (e) {
        console.error("Error parsing models by brand JSON:", e);
        modelsByBrand = {};
    }

    const makeFilter = document.getElementById('makeFilter');
    const modelFilter = document.getElementById('modelFilter');

    // Function to populate the model dropdown
    function populateModelFilter(selectedBrand) {
        modelFilter.innerHTML = '<option value="">Model</option>'; // Clear previous options
        modelFilter.disabled = true; // Disable model filter by default

        if (selectedBrand && modelsByBrand[selectedBrand]) {
            modelsByBrand[selectedBrand].forEach(model => {
                const option = document.createElement('option');
                option.value = model;
                option.textContent = model;
                modelFilter.appendChild(option);
            });
            modelFilter.disabled = false; // Enable if models exist
        }
    }

    // Event listener for the make filter
    makeFilter.addEventListener('change', function() {
        populateModelFilter(this.value);
    });

    // Logic to pre-select filters if there are URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const initialMake = urlParams.get('make');
    const initialModel = urlParams.get('model');

    if (initialMake) {
        makeFilter.value = initialMake;
        populateModelFilter(initialMake);

        if (initialModel) {
            setTimeout(() => {
                modelFilter.value = initialModel;
            }, 100);
        }
    }

    // Scroll Reveal Effect JavaScript (simple implementation)
    // This can be replaced by a more robust library like ScrollReveal.js if needed.
    const fadeInElements = document.querySelectorAll('.fade-in-up');

    const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('revealed');
                observer.unobserve(entry.target); // Stop observing once revealed
            }
        });
    }, {
        threshold: 0.1 // Trigger when 10% of the element is visible
    });

    fadeInElements.forEach(element => {
        observer.observe(element);
    });

    // JavaScript for horizontal scroll of featured cars with loop
    function scrollFeaturedCars(direction) {
        const container = document.getElementById('featuredCarouselInner');
        if (!container) {
            console.error("Função scrollFeaturedCars: featuredCarouselInner não encontrado.");
            return;
        }

        const firstItem = container.querySelector('.featured-car-item');
        if (!firstItem) {
            console.error("Função scrollFeaturedCars: Nenhum .featured-car-item encontrado no carrossel.");
            return;
        }

        const itemWidth = firstItem.offsetWidth;
        const padding = 30; // 15px left + 15px right
        const scrollAmount = itemWidth + padding;

        console.log("Função scrollFeaturedCars: Tentando rolar. Direção:", direction, "Largura do Item:", itemWidth, "Quantidade de Rolagem:", scrollAmount);

        container.scrollBy({
            left: direction * scrollAmount,
            behavior: 'smooth'
        });
    }

    // Infinite scroll logic for featured cars
    document.addEventListener('DOMContentLoaded', function() {
        const featuredCarouselInner = document.getElementById('featuredCarouselInner');
        if (featuredCarouselInner) {
            const originalItems = Array.from(featuredCarouselInner.children);
            const numOriginalItems = originalItems.length;

            if (numOriginalItems === 0) {
                console.warn("Carrossel: Nenhum item original encontrado para clonar. Verifique se 'latestCars' está populado.");
                return;
            }

            const numClones = Math.min(numOriginalItems, 3);

            featuredCarouselInner.innerHTML = '';

            for (let i = 0; i < numClones; i++) {
                const cloneIndex = numOriginalItems - numClones + i;
                const clone = originalItems[cloneIndex].cloneNode(true);
                featuredCarouselInner.prepend(clone);
            }

            originalItems.forEach(item => {
                featuredCarouselInner.appendChild(item.cloneNode(true));
            });

            for (let i = 0; i < numClones; i++) {
                const clone = originalItems[i].cloneNode(true);
                featuredCarouselInner.appendChild(clone);
            }

            requestAnimationFrame(() => {
                const firstOriginalItem = featuredCarouselInner.children[numClones];
                if (firstOriginalItem) {
                    featuredCarouselInner.scrollLeft = firstOriginalItem.offsetLeft;
                } else {
                    console.warn("Carrossel: Não foi possível encontrar o primeiro item original para definir o scrollLeft inicial.");
                }
            });

            let isScrolling;
            featuredCarouselInner.addEventListener('scroll', () => {
                window.clearTimeout(isScrolling);
                isScrolling = setTimeout(() => {
                    const scrollLeft = featuredCarouselInner.scrollLeft;
                    const itemWidth = originalItems[0] ? (originalItems[0].offsetWidth + 30) : 0;

                    const startOfOriginals = numClones * itemWidth;
                    const endOfOriginals = (numClones + numOriginalItems) * itemWidth;

                    if (scrollLeft >= endOfOriginals - featuredCarouselInner.clientWidth) {
                        featuredCarouselInner.style.scrollBehavior = 'auto';
                        featuredCarouselInner.scrollLeft = startOfOriginals;
                        featuredCarouselInner.style.scrollBehavior = 'smooth';
                    } else if (scrollLeft <= 0) {
                        featuredCarouselInner.style.scrollBehavior = 'auto';
                        featuredCarouselInner.scrollLeft = (numClones + numOriginalItems - 1) * itemWidth;
                        featuredCarouselInner.style.scrollBehavior = 'smooth';
                    }
                }, 66);
            });
        } else if (featuredCarouselInner) {
            console.warn("Carrossel: Elemento 'featuredCarouselInner' encontrado, mas sem filhos para clonar. Certifique-se de que o array 'latestCars' está populado e renderizado.");
        }
    });
</script>
