    /* Styles for the image inside the hero card */
    .hero-card-image {
        width: 100%; /* Image takes full width of the card */
        height: 50%; /* Adjusted: Image takes 50% of the card's height */
        object-fit: cover; /* Ensures the image covers the area without distortion */
        border-top-left-radius: 15px; /* Match card's top-left border radius */
        border-top-right-radius: 15px; /* Match card's top-right border radius */
    }

    /* Styles for the text content inside the hero card */
    .hero-card-text-content {
        padding: 10px; /* Adjusted: Smaller padding around the text */
        flex-grow: 1; /* Allows this content to take up remaining vertical space */
        display: flex;
        flex-direction: column;
        justify-content: center; /* Centers text vertically within its allocated space */
