        color: rgba(255, 255, 255, 0.9);
        margin-top: 0;
        z-index: 2;
    }

    /* Innovative Hover Effect (adjusted for cards with image and text) */
    .hero-card:hover {
        transform: scale(1.03) translateY(-5px); /* Lift and slightly scale */
        box-shadow: 0 15px 40px rgba(5, 252, 4, 0.5); /* Stronger green glow */
        border-color: #05FC04; /* Highlight border */
