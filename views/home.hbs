        transform: scale(1.03) translateY(-5px); /* Only scale and lift */
        box-shadow: 0 18px 45px rgba(5, 252, 4, 0.6);
    }

    .hero-card-link:hover .hero-card h3,
    .hero-card-link:hover .hero-card p {
        transform: none; /* No counter-skew needed */
