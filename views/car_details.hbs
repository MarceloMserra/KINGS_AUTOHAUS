<!-- This file will be rendered inside the {{{body}}} of the layout.hbs -->

<style>
    /* Styles specific to the car details page for premium look */
    body {
        background-color: #000000; /* Ensure body background is black */
        color: #ffffff; /* Default text color */
    }

    .car-details-header {
        background-color: #1a1a1a; /* Darker header background */
        padding: 30px 0;
        margin-bottom: 30px;
        border-bottom: 1px solid #333333; /* Subtle border */
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    .car-details-header h1 {
        font-weight: bold;
        color: #029C4A; /* Green title */
        font-size: 3rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }
    .car-details-header p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.2rem;
    }
    .car-details-header .price-display {
        font-size: 3rem; /* Larger price display */
        font-weight: bold;
        color: #029C4A; /* Green price */
        margin-top: 20px;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }

    .carousel-item img {
        height: 500px; /* Fixed height for carousel images */
        object-fit: cover;
        width: 100%;
        border-radius: 8px;
        border: 1px solid #029C4A; /* Green border for carousel */
        box-shadow: 0 0 25px rgba(2, 156, 74, 0.3); /* Green glow */
    }
    .carousel-indicators li {
        background-color: #029C4A; /* Green indicators */
        height: 8px;
        width: 8px;
        border-radius: 50%;
        margin: 0 5px;
    }
    .carousel-control-prev-icon, .carousel-control-next-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23029C4A' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
    }
    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23029C4A' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
    }


    .card.shadow-sm.h-100 {
        background-color: #1a1a1a; /* Darker card background for specs */
        border: 1px solid #333333;
        color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }
    .card-body h4.card-title {
        color: #029C4A; /* Green title for specs */
        font-weight: bold;
        margin-bottom: 20px;
    }
    .specs-list li {
        margin-bottom: 12px;
        font-size: 1.05rem;
        color: rgba(255, 255, 255, 0.9);
    }
    .specs-list strong {
        color: #ffffff; /* White for strong text in specs */
    }
    .specs-list i {
        color: #029C4A; /* Green icons in specs */
        margin-right: 10px;
    }

    .description-section, .safety-section, .tech-section {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px dashed #333333; /* Darker dashed border */
        color: #ffffff;
    }
    .description-section h3, .safety-section h3, .tech-section h3 {
        color: #029C4A; /* Green titles for sections */
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }
    .description-section p, .safety-section p, .tech-section p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
        line-height: 1.7;
    }

    .btn-back-to-home {
        background-color: #029C4A; /* Green button */
        border-color: #029C4A;
        color: #000000; /* Black text */
        font-weight: bold;
        padding: 15px 40px;
        border-radius: 8px;
        font-size: 1.2rem;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }
    .btn-back-to-home:hover {
        background-color: #017A3A; /* Darker green on hover */
        border-color: #017A3A;
        color: #ffffff;
    }
</style>

<div class="container mt-4">
    <div class="car-details-header text-center">
        <h1>{{car.brand}} {{car.t2}}</h1>
        <p class="lead">{{car.title}} - {{car.year}}</p>
        <h2 class="price-display">R$ {{car.priceStr}}</h2>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            {{#if car.image.length}}
            <div id="carCarousel" class="carousel slide shadow-lg" data-ride="carousel">
                <ol class="carousel-indicators">
                    {{#each car.image}}
                        <li data-target="#carCarousel" data-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}"></li>
                    {{/each}}
                </ol>
                <div class="carousel-inner">
                    {{#each car.image}}
                        <div class="carousel-item {{#if @first}}active{{/if}}">
                            <img src="{{this}}" class="d-block w-100" alt="Car image {{add @index 1}}">
                        </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev" href="#carCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            {{else}}
            <img src="https://placehold.co/800x500/0a0a0a/029C4A?text=No+Image" class="img-fluid rounded shadow-lg" alt="No Image">
            {{/if}}
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title mb-3">Key Specifications</h4>
                    <ul class="list-unstyled specs-list">
                        <li><i class="fas fa-tachometer-alt mr-2"></i> <strong>Max Speed:</strong> {{car.topspeed}} mph</li>
                        <li><i class="fas fa-stopwatch mr-2"></i> <strong>0-60 Time:</strong> {{car.time60}} s</li>
                        <li><i class="fas fa-gas-pump mr-2"></i> <strong>Mileage:</strong> {{car.mileage}} mpg</li>
                        <li><i class="fas fa-engine mr-2"></i> <strong>Engine:</strong> {{car.engine}} L</li>
                        <li><i class="fas fa-cogs mr-2"></i> <strong>Cylinders:</strong> {{car.cyl}}</li>
                        <li><i class="fas fa-car-alt mr-2"></i> <strong>Gearbox:</strong> {{car.gearbox}}</li>
                        <li><i class="fas fa-car-side mr-2"></i> <strong>Transmission:</strong> {{car.transmission}}</li>
                        <li><i class="fas fa-palette mr-2"></i> <strong>Color:</strong> {{car.colour}}</li>
                        <li><i class="fas fa-couch mr-2"></i> <strong>Interior:</strong> {{car.interior}}</li>
                        <li><i class="fas fa-car-battery mr-2"></i> <strong>Body:</strong> {{car.body}}</li>
                        <li><i class="fas fa-road mr-2"></i> <strong>Drivetrain:</strong> {{car.drivetrain}}</li>
                        <li><i class="fas fa-tire mr-2"></i> <strong>Wheel:</strong> {{car.wheel}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="description-section">
                <h3>Description</h3>
                <p>{{car.description}}</p>
            </div>
            <div class="safety-section">
                <h3>Safety</h3>
                <p>{{car.safety}}</p>
            </div>
            <div class="tech-section">
                <h3>Technology</h3>
                <p>{{car.technology}}</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-5 mb-4">
        <a href="/" class="btn btn-back-to-home btn-lg">Back to Home Page</a>
    </div>
</div>
