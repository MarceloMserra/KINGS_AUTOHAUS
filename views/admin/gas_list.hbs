<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    /* Styles specific to the admin gas car list page */
    body {
        background-color: #000000; /* Ensure body background is black */
        color: #ffffff; /* Default text color for contrast */
    }

    .container {
        padding-top: 30px;
        padding-bottom: 30px;
        /* Max width adjusted for better use of space on larger screens */
        max-width: 1400px; /* Increased max-width for more horizontal space */
    }

    h3.section-title-admin {
        color: #05FC04; /* Green title */
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 10px;
        text-align: center;
    }

    h3.section-title-admin::after {
        content: '';
        position: absolute;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%);
        height: 3px;
        width: 80px;
        background-color: #05FC04;
        border-radius: 5px;
    }

    .table-responsive {
        background-color: #1a1a1a; /* Darker background for the table container */
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        padding: 20px;
        overflow-x: auto; /* Ensure horizontal scroll for smaller screens if needed */
    }

    .table {
        color: #ffffff; /* White text for table content */
        border-color: #333333; /* Darker border for table cells */
        width: 100%; /* Ensure table takes full width of its container */
        min-width: 800px; /* Minimum width to prevent excessive squishing on smaller screens */
    }

    .table thead th {
        background-color: #0d0d0d; /* Even darker header background */
        color: #05FC04; /* Green header text */
        border-color: #333333;
        font-weight: bold;
        font-size: 1.1rem;
        padding: 12px 15px; /* More padding for headers */
    }

    .table tbody tr {
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease; /* Smooth transitions */
        border-bottom: 1px solid #333333; /* Subtle line between rows */
    }

    .table tbody tr:last-child {
        border-bottom: none; /* No border for the last row */
    }

    .table tbody tr:hover {
        background-color: #2a2a2a; /* Slightly lighter row on hover */
        transform: translateY(-2px); /* Slight lift effect */
        box-shadow: 0 4px 15px rgba(5, 252, 4, 0.2); /* Green glow effect */
        color: #ffffff; /* Ensure text remains white on hover */
    }

    /* Ensure text in hovered rows remains readable */
    .table tbody tr:hover td {
        color: #ffffff;
    }
    .table tbody tr:hover td small.text-muted {
        color: rgba(255, 255, 255, 0.8) !important; /* Slightly brighter muted text */
    }
    .table tbody tr:hover strong {
        color: #05FC04; /* Highlight main text with green on hover */
    }


    .table tbody td {
        border-color: #333333;
        vertical-align: middle; /* Center content vertically */
        padding: 10px 15px; /* More padding for cells */
    }

    .table img {
        border: 1px solid #05FC04; /* Green border for images */
        border-radius: 5px; /* Slightly more rounded */
        width: 80px; /* Larger image preview */
        height: auto;
        object-fit: cover;
        box-shadow: 0 2px 8px rgba(5, 252, 4, 0.2); /* Green glow for images */
    }

    .table small.text-muted {
        color: rgba(255, 255, 255, 0.6) !important; /* Lighter grey for photo count */
        display: block; /* Ensure it breaks to a new line */
        font-size: 0.8rem;
    }

    /* Action buttons in the table */
    .table .action-buttons {
        display: flex;
        flex-direction: column; /* Stack buttons vertically */
        gap: 5px; /* Space between buttons */
        align-items: center; /* Center buttons */
    }

    .table .btn-action {
        padding: 6px 12px; /* Smaller padding for compact buttons */
        font-size: 0.85rem;
        font-weight: bold;
        border-radius: 5px;
        transition: all 0.2s ease;
        width: 80px; /* Fixed width for consistency */
        text-align: center;
        text-decoration: none; /* Remove underline from links */
    }

    .btn-primary-admin {
        background-color: #05FC04; /* Green button */
        border-color: #05FC04;
        color: #000000; /* Black text */
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-primary-admin:hover {
        background-color: #04D803; /* Darker green on hover */
        border-color: #04D803;
        color: #ffffff;
        box-shadow: 0 4px 15px rgba(5, 252, 4, 0.4);
    }

    .btn-secondary-admin {
        background-color: #333333; /* Dark grey button */
        border-color: #333333;
        color: #ffffff;
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-secondary-admin:hover {
        background-color: #555555;
        border-color: #555555;
        color: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    .btn-info-admin {
        background-color: #17a2b8; /* Bootstrap info blue, can be customized */
        border-color: #17a2b8;
        color: #ffffff;
    }
    .btn-info-admin:hover {
        background-color: #138496;
        border-color: #117a8b;
        box-shadow: 0 4px 15px rgba(23, 162, 184, 0.4);
    }

    .btn-danger-admin {
        background-color: #dc3545; /* Bootstrap danger red */
        border-color: #dc3545;
        color: #ffffff;
    }
    .btn-danger-admin:hover {
        background-color: #c82333;
        border-color: #bd2130;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
    }

    .alert-info-custom {
        background-color: #1a1a1a; /* Dark background for info alert */
        color: #ffffff;
        border-color: #333333;
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
    }

    /* Responsive adjustments for the table */
    @media (max-width: 991.98px) { /* Tablets and smaller */
        .table thead {
            display: none; /* Hide table headers on small screens */
        }
        .table tbody, .table tr, .table td {
            display: block; /* Make table elements behave like block-level elements */
            width: 100%;
        }
        .table tr {
            margin-bottom: 15px;
            border: 1px solid #333333;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            background-color: #1a1a1a; /* Ensure background color for mobile cards */
        }
        .table tr:hover {
            transform: none; /* Remove lift effect on mobile cards to avoid weird behavior */
            box-shadow: 0 6px 18px rgba(5, 252, 4, 0.3); /* Keep subtle green glow on hover */
        }
        .table td {
            text-align: right;
            padding-left: 50%; /* Space for pseudo-element labels */
            position: relative;
            border: none; /* Remove cell borders */
            color: #ffffff; /* Ensure text color is white */
        }
        .table td::before {
            content: attr(data-label); /* Use data-label for content */
            position: absolute;
            left: 15px;
            width: calc(50% - 30px);
            text-align: left;
            font-weight: bold;
            color: #05FC04; /* Green label */
        }
        .table td:last-child { /* Actions column */
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 15px;
            border-top: 1px solid #333333;
        }
        .table .action-buttons {
            flex-direction: row; /* Buttons side-by-side on mobile */
            gap: 10px;
            width: 100%;
            justify-content: center;
        }
        .table .btn-action {
            width: auto; /* Allow buttons to size content */
            flex-grow: 1; /* Distribute space */
        }
        .table img {
            width: 100px; /* Larger image on mobile card */
            height: auto;
            margin: 0 auto 10px auto;
            display: block;
        }
        .table small.text-muted {
            text-align: center;
            margin-top: 5px;
            color: rgba(255, 255, 255, 0.7) !important; /* Ensure visibility */
        }
    }

    @media (max-width: 767.98px) { /* Smaller phones */
        .container {
            padding-left: 15px;
            padding-right: 15px;
        }
        h3.section-title-admin {
            font-size: 2rem;
        }
        .table .action-buttons {
            flex-direction: column; /* Stack buttons again on very small screens */
        }
    }
</style>

<div class="container mt-4">
    <h3 class="section-title-admin">Cars List</h3>
    <hr>

    <div class="d-flex justify-content-between mb-3">
        <a href="/admin/addgas" class="btn btn-primary-admin">Add New Car</a>
        <a href="/admin" class="btn btn-secondary-admin">Back to Admin Dashboard</a>
    </div>

    {{#if list.length}}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Image</th>
                    <th>Vehicle</th>
                    <th>Price</th>
                    <th>Stock # / VIN</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                <tr>
                    <td data-label="Image">
                        {{#if this.image.length}}
                            <img src="{{this.image.[0]}}" alt="{{this.title}}">
                            {{#if (gt this.image.length 1)}}
                                <small class="text-muted">(+{{subtract this.image.length 1}} photos)</small>
                            {{/if}}
                        {{else}}
                            <i class="fas fa-car fa-2x text-muted"></i>
                        {{/if}}
                    </td>
                    <td data-label="Vehicle">
                        <strong>{{this.year}} {{this.brand}} {{this.t2}}</strong>
                        {{#if this.trim}}<br><small>{{this.trim}}</small>{{/if}}
                    </td>
                    <td data-label="Price">$ {{this.priceStr}}</td>
                    <td data-label="Stock # / VIN">
                        {{#if this.stockNumber}}Stock#: {{this.stockNumber}}<br>{{/if}}
                        {{#if this.vin}}VIN: {{this.vin}}{{/if}}
                    </td>
                    <td data-label="Status">{{this.status}}</td>
                    <td data-label="Actions">
                        <div class="action-buttons">
                            <a href="/admin/editgas/{{this._id}}" class="btn btn-info-admin btn-action">Edit</a>
                            <a href="/admin/deletegas/{{this._id}}" class="btn btn-danger-admin btn-action" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-info-custom text-center" role="alert">
        No cars registered yet.
    </div>
    {{/if}}
</div>
