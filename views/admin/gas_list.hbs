<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    /* Styles specific to the admin gas car list page */
    body {
        background-color: #000000; /* Ensure body background is black */
        color: #ffffff; /* Default text color for contrast */
    }

    .container {
        padding-top: 30px;
        padding-bottom: 30px;
    }

    h3.section-title-admin {
        color: #05FC04; /* Green title - UPDATED GREEN */
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 10px;
        text-align: center;
    }

    h3.section-title-admin::after {
        content: '';
        position: absolute;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%);
        height: 3px;
        width: 80px;
        background-color: #05FC04; /* UPDATED GREEN */
        border-radius: 5px;
    }

    .table-responsive {
        background-color: #1a1a1a; /* Darker background for the table container */
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        padding: 20px;
    }

    .table {
        color: #ffffff; /* White text for table content */
        border-color: #333333; /* Darker border for table cells */
    }

    .table thead th {
        background-color: #0d0d0d; /* Even darker header background */
        color: #05FC04; /* Green header text - UPDATED GREEN */
        border-color: #333333;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .table tbody tr {
        transition: background-color 0.3s ease;
    }

    .table tbody tr:hover {
        background-color: #2a2a2a; /* Slightly lighter row on hover */
    }

    .table tbody td {
        border-color: #333333;
        vertical-align: middle; /* Center content vertically */
    }

    .table img {
        border: 1px solid #05FC04; /* Green border for images - UPDATED GREEN */
    }

    .table small.text-muted {
        color: rgba(255, 255, 255, 0.6) !important; /* Lighter grey for photo count */
    }

    .btn-primary-admin {
        background-color: #05FC04; /* Green button - UPDATED GREEN */
        border-color: #05FC04; /* UPDATED GREEN */
        color: #000000; /* Black text */
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-primary-admin:hover {
        background-color: #04D803; /* Darker green on hover - UPDATED GREEN */
        border-color: #04D803; /* UPDATED GREEN */
        color: #ffffff;
    }

    .btn-secondary-admin {
        background-color: #333333; /* Dark grey button */
        border-color: #333333;
        color: #ffffff;
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-secondary-admin:hover {
        background-color: #555555;
        border-color: #555555;
    }

    .btn-info-admin {
        background-color: #17a2b8; /* Bootstrap info blue, can be customized */
        border-color: #17a2b8;
        color: #ffffff;
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }
    .btn-info-admin:hover {
        background-color: #138496;
        border-color: #117a8b;
    }

    .btn-danger-admin {
        background-color: #dc3545; /* Bootstrap danger red */
        border-color: #dc3545;
        color: #ffffff;
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }
    .btn-danger-admin:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .alert-info-custom {
        background-color: #1a1a1a; /* Dark background for info alert */
        color: #ffffff;
        border-color: #333333;
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
    }
</style>

<div class="container mt-4">
    <h3 class="section-title-admin">Cars List</h3>
    <hr>

    <div class="d-flex justify-content-between mb-3">
        <a href="/admin/addgas" class="btn btn-primary-admin">Add New Car</a>
        <a href="/admin" class="btn btn-secondary-admin">Back to Admin Dashboard</a>
    </div>

    {{#if list}}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Images</th>
                    <th>Title</th>
                    <th>Subtitle</th>
                    <th>Year</th>
                    <th>Price</th>
                    <th>Max Speed</th>
                    <th>0-60 Time</th>
                    <th>Mileage</th>
                    <th>Engine</th>
                    <th>Cylinders</th>
                    <th>Gearbox</th>
                    <th>Transmission</th>
                    <th>Color</th>
                    <th>Interior</th>
                    <th>Body</th>
                    <th>Drivetrain</th>
                    <th>Wheel</th>
                    <th>Description</th>
                    <th>Safety</th>
                    <th>Technology</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                <tr>
                    <td>
                        {{#if this.image.length}}
                            <img src="{{this.image.[0]}}" alt="{{this.title}}" style="width: 70px; height: auto; margin: 2px; border-radius: 3px;">
                            {{#if (gt this.image.length 1)}}
                                <small class="text-muted d-block mt-1">(+{{subtract this.image.length 1}} photos)</small>
                            {{/if}}
                        {{else}}
                            <i class="fas fa-car fa-2x text-muted"></i>
                        {{/if}}
                    </td>
                    <td>{{this.title}}</td>
                    <td>{{this.t2}}</td>
                    <td>{{this.year}}</td>
                    <td>R$ {{this.priceStr}}</td>
                    <td>{{this.topspeed}} mph</td>
                    <td>{{this.time60}} s</td>
                    <td>{{this.mileage}} mpg</td>
                    <td>{{this.engine}} L</td>
                    <td>{{this.cyl}}</td>
                    <td>{{this.gearbox}}</td>
                    <td>{{this.transmission}}</td>
                    <td>{{this.colour}}</td>
                    <td>{{this.interior}}</td>
                    <td>{{this.body}}</td>
                    <td>{{this.drivetrain}}</td>
                    <td>{{this.wheel}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.safety}}</td>
                    <td>{{this.technology}}</td>
                    <td>
                        <a href="/admin/editgas/{{this._id}}" class="btn btn-info-admin btn-sm mb-1">Edit</a>
                        <a href="/admin/deletegas/{{this._id}}" class="btn btn-danger-admin btn-sm" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-info-custom text-center" role="alert">
        No cars registered yet.
    </div>
    {{/if}}
</div>
