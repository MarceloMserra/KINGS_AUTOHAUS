<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    body {
        background-color: #000000; /* Ensure body background is black */
        color: #ffffff; /* Default text color */
    }

    .container {
        padding-top: 30px;
        padding-bottom: 30px;
    }

    .card {
        background-color: #1a1a1a; /* Darker card background */
        border: 1px solid #333333; /* Subtle card border */
        color: #ffffff; /* White text inside cards */
        border-radius: 10px; /* Rounded card corners */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    h3.form-title {
        color: #05FC04; /* Green title - UPDATED GREEN */
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    hr {
        border-top: 2px solid #05FC04; /* Green line - UPDATED GREEN */
        width: 80px;
        margin: 15px auto 30px auto;
        border-radius: 5px;
    }

    .form-group label {
        color: #ffffff; /* White label text */
        font-weight: bold;
        margin-bottom: 8px;
    }

    .form-control {
        background-color: #0d0d0d; /* Very dark input background */
        color: #ffffff;
        border: 1px solid #05FC04; /* Green border - UPDATED GREEN */
        border-radius: 8px; /* Slightly less rounded than login for forms */
        padding: 10px 15px;
        font-size: 1rem;
        box-sizing: border-box;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .form-control:focus {
        background-color: #2a2a2a;
        border-color: #05FC04; /* UPDATED GREEN */
        box-shadow: 0 0 0 0.2rem rgba(5, 252, 4, 0.25); /* UPDATED GREEN */
        color: #ffffff;
        outline: none;
    }

    .btn-submit-form {
        background-color: #05FC04 !important; /* Green button - UPDATED GREEN */
        border-color: #05FC04 !important; /* UPDATED GREEN */
        color: #000000 !important; /* Black text */
        font-weight: bold !important;
        padding: 12px 30px !important;
        border-radius: 8px !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
    }

    .btn-submit-form:hover {
        background-color: #04D803 !important; /* Darker green on hover - UPDATED GREEN */
        border-color: #04D803 !important; /* UPDATED GREEN */
        color: #ffffff !important;
        transform: translateY(-2px) !important;
        box-shadow: 0 5px 15px rgba(5, 252, 4, 0.4) !important; /* UPDATED GREEN */
    }

    .btn-cancel-form {
        background-color: #333333 !important; /* Dark grey button */
        border-color: #333333 !important;
        color: #ffffff !important;
        font-weight: bold !important;
        padding: 12px 30px !important;
        border-radius: 8px !important;
        font-size: 1.1rem !important;
        transition: all 0.3s ease !important;
    }

    .btn-cancel-form:hover {
        background-color: #555555 !important;
        border-color: #555555 !important;
        color: #ffffff !important;
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.8);
        color: #ffffff;
        border-color: #dc3545;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        font-weight: bold;
    }

    /* Checkbox custom style */
    .form-check-input[type="checkbox"] {
        width: 1.25em;
        height: 1.25em;
        margin-top: 0.25em;
        vertical-align: top;
        background-color: #0d0d0d;
        border: 1px solid #05FC04;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.25em;
        transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-check-input[type="checkbox"]:checked {
        background-color: #05FC04;
        border-color: #05FC04;
    }

    .form-check-input[type="checkbox"]:checked::before {
        content: "\f00c"; /* Font Awesome check icon */
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
        color: #000000;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 0.8em;
    }

    .form-check-label {
        color: #ffffff;
        font-weight: normal;
    }
</style>

<div class="container mt-4 mb-4">
    <div class="card p-4 shadow-sm">
        <h3 class="form-title">Register Staff User</h3>
        <hr>

        <!-- Error messages (if any) -->
        {{#if errors}}
            {{#each errors}}
                <div class="alert alert-danger text-center" role="alert">
                    {{this.text}}
                </div>
            {{/each}}
        {{/if}}
        {{#if error_msg}}
            <div class="alert alert-danger text-center" role="alert">
                {{error_msg}}
            </div>
        {{/if}}

        <form action="/admin/register-staff" method="POST" autocomplete="off">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="nome" class="form-control" placeholder="Enter Staff Name" value="{{nome}}" required>
                </div>
                <div class="form-group col-md-12">
                    <label for="email">Email address</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Staff Email" value="{{email}}" required>
                </div>
                <div class="form-group col-md-12">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="senha" class="form-control" placeholder="Create Password" required>
                </div>
                <div class="form-group col-md-12">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="senha2" class="form-control" placeholder="Confirm Password" required>
                </div>
                <div class="form-group col-md-12 text-left">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin" {{#if isAdmin}}checked{{/if}}>
                        <label class="form-check-label" for="isAdmin">
                            Grant Administrator Access (Can manage cars)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-submit-form">Register Staff</button>
                <a class="btn btn-cancel-form" href="/admin">Back to Admin Dashboard</a>
            </div>
        </form>
    </div>
</div>
