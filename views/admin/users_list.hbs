<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    /* Styles specific to the admin users list page */
    body {
        background-color: #000000; /* Ensure body background is black */
        color: #ffffff; /* Default text color for contrast */
        overflow-x: hidden; /* Esconde a barra de rolagem horizontal globalmente */
    }

    .container {
        padding-top: 30px;
        padding-bottom: 30px;
        max-width: 1400px;
    }

    h3.section-title-admin {
        color: #05FC04; /* Green title */
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 10px;
        text-align: center;
    }

    h3.section-title-admin::after {
        content: '';
        position: absolute;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%);
        height: 3px;
        width: 80px;
        background-color: #05FC04;
        border-radius: 5px;
    }

    .table-responsive {
        background-color: #1a1a1a; /* Darker background for the table container */
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        padding: 20px;
    }

    .table {
        color: #ffffff; /* White text for table content */
        border-color: #333333; /* Darker border for table cells */
        width: 100%;
        min-width: 600px; /* Minimum width for desktop table */
    }

    .table thead th {
        background-color: #0d0d0d; /* Even darker header background */
        color: #05FC04; /* Green header text */
        border-color: #333333;
        font-weight: bold;
        font-size: 1.1rem;
        padding: 12px 15px;
    }

    .table tbody tr {
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
        border-bottom: 1px solid #333333;
    }

    .table tbody tr:last-child {
        border-bottom: none;
    }

    .table tbody tr:hover {
        background-color: #2a2a2a;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(5, 252, 4, 0.2);
        color: #ffffff;
    }

    .table tbody tr:hover td {
        color: #ffffff;
    }
    .table tbody tr:hover td small.text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }
    .table tbody tr:hover strong {
        color: #05FC04;
    }

    .table tbody td {
        border-color: #333333;
        vertical-align: middle;
        padding: 10px 15px;
    }

    .table .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 5px;
        align-items: center;
    }

    .table .btn-action {
        padding: 6px 12px;
        font-size: 0.85rem;
        font-weight: bold;
        border-radius: 5px;
        transition: all 0.2s ease;
        width: 80px;
        text-align: center;
        text-decoration: none;
    }

    .btn-primary-admin {
        background-color: #05FC04;
        border-color: #05FC04;
        color: #000000;
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-primary-admin:hover {
        background-color: #04D803;
        border-color: #04D803;
        color: #ffffff;
        box-shadow: 0 4px 15px rgba(5, 252, 4, 0.4);
    }

    .btn-secondary-admin {
        background-color: #333333;
        border-color: #333333;
        color: #ffffff;
        font-weight: bold;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-secondary-admin:hover {
        background-color: #555555;
        border-color: #555555;
        color: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    .btn-danger-admin {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #ffffff;
    }
    .btn-danger-admin:hover {
        background-color: #c82333;
        border-color: #bd2130;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
    }

    .alert-info-custom {
        background-color: #1a1a1a;
        color: #ffffff;
        border-color: #333333;
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
    }

    /* Responsive adjustments for the table */
    @media (max-width: 991.98px) { /* Tablets and smaller */
        .table {
            min-width: unset !important;
        }
        .table thead {
            display: none !important;
        }
        .table tbody, .table tr {
            display: block !important;
            width: 100% !important;
        }
        .table tr {
            margin-bottom: 15px !important;
            border: 1px solid #333333 !important;
            border-radius: 10px !important;
            overflow: hidden !important;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3) !important;
            background-color: #1a1a1a !important;
            padding: 15px !important;
            display: flex !important;
            flex-wrap: wrap !important;
            align-items: flex-start !important;
        }
        .table tr:hover {
            transform: none !important;
            box-shadow: 0 6px 18px rgba(5, 252, 4, 0.3) !important;
        }
        .table td {
            text-align: left !important;
            padding-left: 0 !important;
            position: static !important;
            border: none !important;
            color: #ffffff !important;
            display: flex !important;
            justify-content: flex-start !important;
            align-items: center !important;
            padding-top: 4px !important;
            padding-bottom: 4px !important;
            word-break: break-word;
            width: 100% !important;
        }
        .table td::before {
            content: attr(data-label) !important;
            position: static !important;
            width: auto !important;
            text-align: left !important;
            font-weight: bold !important;
            color: #05FC04 !important;
            margin-right: 10px !important;
            flex-shrink: 0 !important;
        }

        /* Adjustments for specific columns in mobile view */
        .table td:first-child { /* Name column */
            display: flex !important;
            flex-direction: row !important;
            align-items: center !important;
            padding: 0 !important;
            width: 100% !important;
            margin-bottom: 10px !important;
            border-bottom: 1px solid #333333 !important;
            padding-bottom: 10px !important;
        }
        .table td:first-child::before {
            content: none !important; /* Remove label for name in this specific layout */
        }
        .table td:first-child strong {
            font-size: 1.1rem !important;
            margin-bottom: 0 !important;
            display: block !important;
        }

        .table td:nth-child(2), /* Email */
        .table td:nth-child(3) { /* Admin Status */
            width: 50% !important;
            padding-left: 15px !important;
            padding-right: 15px !important;
            justify-content: space-between !important;
            flex-wrap: nowrap !important;
        }
        .table td:nth-child(2)::before,
        .table td:nth-child(3)::before {
            width: auto !important;
            margin-right: 5px !important;
        }
        .table td:nth-child(2) {
            border-right: 1px solid #333333 !important;
        }

        .table td:last-child { /* Actions column */
            text-align: center !important;
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            padding: 15px !important;
            border-top: 1px solid #333333 !important;
            width: 100% !important;
        }
        .table .action-buttons {
            flex-direction: row !important;
            gap: 10px !important;
            width: 100% !important;
            justify-content: center !important;
        }
        .table .btn-action {
            width: auto !important;
            flex-grow: 1 !important;
        }
    }

    @media (max-width: 767.98px) { /* Smaller phones */
        .container {
            padding-left: 15px !important;
            padding-right: 15px !important;
        }
        h3.section-title-admin {
            font-size: 2rem !important;
        }
        .table .action-buttons {
            flex-direction: column !important;
        }
        .table td:nth-child(2), /* Email */
        .table td:nth-child(3) { /* Admin Status */
            width: 100% !important;
            border-right: none !important;
            border-bottom: 1px solid #333333 !important;
        }
        .table td:last-child {
            border-bottom: none !important;
        }
    }
</style>

<div class="container mt-4">
    <h3 class="section-title-admin">Staff Users List</h3>
    <hr>

    <div class="d-flex justify-content-between mb-3">
        <a href="/admin/register-staff" class="btn btn-primary-admin">Register New Staff</a>
        <a href="/admin" class="btn btn-secondary-admin">Back to Admin Dashboard</a>
    </div>

    {{#if users.length}}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Admin Privileges</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td data-label="Name">
                        <strong>{{this.nome}}</strong>
                    </td>
                    <td data-label="Email">
                        {{this.email}}
                    </td>
                    <td data-label="Admin Privileges">
                        {{#if this.isAdmin}}
                            <span class="badge badge-success">Yes</span>
                        {{else}}
                            <span class="badge badge-secondary">No</span>
                        {{/if}}
                    </td>
                    <td data-label="Actions">
                        <div class="action-buttons">
                            {{!-- Ação de editar usuário (se necessário, pode ser implementada) --}}
                            {{!-- <a href="/admin/edituser/{{this._id}}" class="btn btn-info-admin btn-action">Edit</a> --}}
                            <a href="/admin/deleteuser/{{this._id}}" class="btn btn-danger-admin btn-action" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-info-custom text-center" role="alert">
        No staff users registered yet.
    </div>
    {{/if}}
</div>
