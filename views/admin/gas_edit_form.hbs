<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    /* Styles for the add/edit car forms */
    body {
        background-color: #000000; /* Ensure body background is black */
        color: #ffffff; /* Default text color */
    }

    .container {
        padding-top: 30px;
        padding-bottom: 30px;
    }

    .card {
        background-color: #1a1a1a; /* Darker card background */
        border: 1px solid #333333; /* Subtle card border */
        color: #ffffff; /* White text inside cards */
        border-radius: 10px; /* Rounded card corners */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    h3.form-title {
        color: #05FC04; /* Green title - UPDATED GREEN */
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    hr {
        border-top: 2px solid #05FC04; /* Green line - UPDATED GREEN */
        width: 80px;
        margin: 15px auto 30px auto;
        border-radius: 5px;
    }

    .form-group label {
        color: #ffffff; /* White label text */
        font-weight: bold;
        margin-bottom: 8px;
    }

    .form-control {
        background-color: #0d0d0d; /* Very dark input background */
        color: #ffffff;
        border: 1px solid #05FC04; /* Green border - UPDATED GREEN */
        border-radius: 8px; /* Slightly less rounded than login for forms */
        padding: 10px 15px;
        font-size: 1rem;
        box-sizing: border-box;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .form-control:focus {
        background-color: #2a2a2a;
        border-color: #05FC04; /* UPDATED GREEN */
        box-shadow: 0 0 0 0.2rem rgba(5, 252, 4, 0.25); /* UPDATED GREEN */
        color: #ffffff;
        outline: none;
    }

    textarea.form-control {
        min-height: 100px; /* Min height for textareas */
        resize: vertical; /* Allow vertical resizing */
    }

    .btn-submit-form {
        background-color: #05FC04; /* Green button - UPDATED GREEN */
        border-color: #05FC04; /* UPDATED GREEN */
        color: #000000; /* Black text */
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
    }

    .btn-submit-form:hover {
        background-color: #04D803; /* Darker green on hover - UPDATED GREEN */
        border-color: #04D803; /* UPDATED GREEN */
        color: #ffffff;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(5, 252, 4, 0.4); /* UPDATED GREEN */
    }

    .btn-cancel-form {
        background-color: #333333; /* Dark grey button */
        border-color: #333333;
        color: #ffffff;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

    .btn-cancel-form:hover {
        background-color: #555555;
        border-color: #555555;
        color: #ffffff;
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.8);
        color: #ffffff;
        border-color: #dc3545;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        font-weight: bold;
    }
</style>

<div class="container mt-4 mb-4">
    <div class="card p-4 shadow-sm">
        <h3 class="form-title">Edit Car</h3>
        <hr>

        <!-- Error message (if any) -->
        {{#if error}}
        <div class="alert alert-danger text-center" role="alert">
            {{error}}
        </div>
        {{/if}}

        <form action="/admin/editgas/{{gasCar._id}}?_method=PUT" method="POST" enctype="multipart/form-data" autocomplete="off">
            <input type="hidden" name="_method" value="PUT">

            <div class="form-row">
                <!-- Image Upload Field (for new images) -->
                <div class="form-group col-md-12">
                    <label for="imagesupld">Upload New Car Images</label> <!-- "(max 10)" removido -->
                    <input type="file" class="form-control-file" id="imagesupld" name="imagesupld" multiple>
                    <small class="form-text text-muted">Select new images to replace existing ones.</small>
                </div>

                <!-- Display Current Images -->
                {{#if gasCar.image.length}}
                <div class="form-group col-md-12">
                    <label>Current Images:</label>
                    <div class="d-flex flex-wrap">
                        {{#each gasCar.image}}
                        <img src="{{this}}" alt="Car image" style="width: 100px; height: auto; margin: 5px; border-radius: 5px; border: 1px solid #05FC04;"> <!-- UPDATED GREEN -->
                        {{/each}}
                    </div>
                </div>
                {{/if}}

                <div class="form-group col-md-4">
                    <label>Make (e.g., Ford, BMW)</label>
                    <input type="text" class="form-control" name="brand" placeholder="e.g., Ford" value="{{gasCar.brand}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Title (e.g., 2019 Ford Mustang)</label>
                    <input type="text" class="form-control" name="title" placeholder="e.g., 2019 Ford Mustang" value="{{gasCar.title}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Model Name (e.g., GT350 Coupe)</label>
                    <input type="text" class="form-control" name="t2" placeholder="e.g., GT350 Coupe" value="{{gasCar.t2}}" required>
                </div>

                <!-- New fields: Stock Number, VIN, Trim -->
                <div class="form-group col-md-4">
                    <label>Stock #</label>
                    <input type="text" class="form-control" name="stockNumber" placeholder="e.g., CM12345" value="{{gasCar.stockNumber}}">
                </div>
                <div class="form-group col-md-4">
                    <label>VIN</label>
                    <input type="text" class="form-control" name="vin" placeholder="e.g., 1G6FV1234567890" value="{{gasCar.vin}}">
                </div>
                <div class="form-group col-md-4">
                    <label>Trim (e.g., Premium Plus)</label>
                    <input type="text" class="form-control" name="trim" placeholder="e.g., Premium Plus" value="{{gasCar.trim}}">
                </div>

                <div class="form-group col-md-2">
                    <label>Year</label>
                    <input type="number" class="form-control" name="year" placeholder="e.g., 2023" value="{{gasCar.year}}" required>
                </div>
                <div class="form-group col-md-2">
                    <label>Price</label>
                    <input type="number" class="form-control" name="price" placeholder="e.g., 58100" value="{{gasCar.price}}" required>
                </div>
                <div class="form-group col-md-2">
                    <label>Formatted Price (e.g., 58,100)</label>
                    <input type="text" class="form-control" name="priceStr" placeholder="e.g., 58,100" value="{{gasCar.priceStr}}" required>
                </div>

                <!-- Performance Specs -->
                <div class="form-group col-md-4">
                    <label>Max Speed (mph)</label>
                    <input type="number" class="form-control" name="topspeed" placeholder="e.g., 185" value="{{gasCar.topspeed}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>0-60 Time (s)</label>
                    <input type="number" step="0.1" class="form-control" name="time60" placeholder="e.g., 3.5" value="{{gasCar.time60}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Mileage (mpg)</label>
                    <input type="number" class="form-control" name="mileage" placeholder="e.g., 19" value="{{gasCar.mileage}}" required>
                </div>

                <!-- Engine & Transmission -->
                <div class="form-group col-md-4">
                    <label>Engine (Liters)</label>
                    <input type="number" step="0.1" class="form-control" name="engine" placeholder="e.g., 5.0" value="{{gasCar.engine}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Cylinders</label>
                    <input type="number" class="form-control" name="cyl" placeholder="e.g., 8" value="{{gasCar.cyl}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Gearbox</label>
                    <input type="text" class="form-control" name="gearbox" placeholder="e.g., 6-Speed SelectShift" value="{{gasCar.gearbox}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Transmission</label>
                    <input type="text" class="form-control" name="transmission" placeholder="e.g., Automatic" value="{{gasCar.transmission}}" required>
                </div>

                <!-- Exterior & Interior -->
                <div class="form-group col-md-4">
                    <label>Color</label>
                    <input type="text" class="form-control" name="colour" placeholder="e.g., Twister Orange" value="{{gasCar.colour}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Interior</label>
                    <input type="text" class="form-control" name="interior" placeholder="e.g., Leather Trimmed" value="{{gasCar.interior}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Body Type (e.g., 2 Door Coupe)</label>
                    <input type="text" class="form-control" name="body" placeholder="e.g., 2 Door Coupe" value="{{gasCar.body}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Drivetrain</label>
                    <input type="text" class="form-control" name="drivetrain" placeholder="e.g., RWD" value="{{gasCar.drivetrain}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Wheel (e.g., 18'' Aluminium)</label>
                    <input type="text" class="form-control" name="wheel" placeholder="e.g., 18'' Aluminium Wheels" value="{{gasCar.wheel}}" required>
                </div>

                <!-- Status Dropdown - NEW FIELD -->
                <div class="form-group col-md-4">
                    <label>Status</label>
                    <select class="form-control" name="status" required>
                        <option value="available" {{#if (eq gasCar.status "available")}}selected{{/if}}>Available</option>
                        <option value="sold" {{#if (eq gasCar.status "sold")}}selected{{/if}}>Sold</option>
                        <option value="pending" {{#if (eq gasCar.status "pending")}}selected{{/if}}>Pending</option>
                    </select>
                </div>

                <!-- Description Sections -->
                <div class="form-group col-md-12">
                    <label>Description</label>
                    <textarea class="form-control" name="description" placeholder="Detailed car description" rows="3" required>{{gasCar.description}}</textarea>
                </div>
                <div class="form-group col-md-12">
                    <label>Safety Features</label>
                    <textarea class="form-control" name="safety" placeholder="Safety information" rows="3" required>{{gasCar.safety}}</textarea>
                </div>
                <div class="form-group col-md-12">
                    <label>Technology Features</label>
                    <textarea class="form-control" name="technology" placeholder="Technology information" rows="3" required>{{gasCar.technology}}</textarea>
                </div>

            </div>

            <div class="form-group d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-submit-form">Save Changes</button>
                <a class="btn btn-cancel-form" href="/admin/gas">Back</a>
            </div>
        </form>
    </div>
</div>
