<!-- This file will be rendered inside the {{{body}}} of the layout_list.hbs -->

<style>
    /* The background style is kept here to be specific to this page,
       but ideally, global or layout styles should be in the CSS. */
    body {
        background-image: url("/images/admin.jpg");
        background-size: cover;
    }

    /* Added style for buttons for better visualization */
    .admin-nav .btn {
        margin-bottom: 10px; /* Spacing between buttons */
        width: 180px; /* Fixed width for uniformity */
        padding: 10px 0; /* Internal padding */
        /* Ensure the button itself has the dark background */
        background-color: #343a40; /* Dark background for consistency */
        border-color: #343a40; /* Dark border for consistency */
        color: white; /* Text color for the button */
        text-decoration: none; /* Remove underline from button text */
        display: flex; /* Use flex to center content */
        justify-content: center; /* Center content horizontally */
        align-items: center; /* Center content vertically */
    }

    .admin-nav .btn a {
        color: white; /* Text color of the link inside the button */
        text-decoration: none; /* Remove underline from links */
        display: block; /* Make the link fill the button */
        width: 100%; /* Make the link fill the button */
        height: 100%; /* Make the link fill the button */
        display: flex; /* Use flex to center text inside the link */
        justify-content: center; /* Center text horizontally */
        align-items: center; /* Center text vertically */
    }

    /* Hover effect for all buttons in admin-nav */
    .admin-nav .btn:hover {
        background-color: #555555; /* Lighter dark on hover */
        border-color: #555555;
    }

    .admin-nav .btn-danger {
        background-color: #dc3545; /* Bootstrap danger red */
        border-color: #dc3545;
    }

    .admin-nav .btn-danger:hover {
        background-color: #c82333; /* Darker red on hover */
        border-color: #bd2130;
    }

    .admin-nav .btn svg,
    .admin-nav .btn i {
        margin-right: 8px; /* Spacing between icon and text */
    }

    /* Style for the logo image in the admin panel */
    .admin-nav img {
        margin-bottom: 30px; /* Spacing below the logo */
    }

    /* Center the main container */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Occupy full viewport height */
    }

    .admin-nav {
        background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent background for the menu */
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); /* Shadow for emphasis */
    }
</style>

<div class="container">
    <div class="admin-nav text-center">

        <!-- Updated logo and link -->
        <a href="/admin"><img src="/images/kings_autohaus_logo.jpeg" height="50px" alt="KINGS AUTOHAUS"></a><br>

        <!-- Add New Car button -->
        <a href="/admin/addgas" class="btn btn-dark">Add New Car</a><br>

        <!-- View All Cars button -->
        <a href="/admin/gas" class="btn btn-dark">View All Cars</a><br>

        <!-- NEW: Register Staff User button - CORRIGIDO -->
        <a href="/admin/register-staff" class="btn btn-dark">Register Staff User</a><br>

        <!-- Logout button -->
        <a href="/logout" class="btn btn-danger mt-4">Logout</a><br>

    </div>
</div>
